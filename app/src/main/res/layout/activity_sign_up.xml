<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUpActivity" android:background="@drawable/background_light_blue">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/etEmail" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:hint="email"
            android:inputType="textEmailAddress"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/etPassword" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/etEmail" android:hint="password"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/etPasswordConfirm" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/etPassword" android:hint="confirm password"/>

    <Button
            android:text="Sign Up"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btSignUp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/etPasswordConfirm" android:onClick="loginListener"/>


    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/progressBar"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/tvLoginLink"
            app:layout_constraintStart_toEndOf="@+id/btSignUp"/>

    <TextView
            android:text="Already have an account? Log In Here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/tvLoginLink" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btSignUp" android:onClick="signUpListener"
            android:textSize="18sp"/>

</android.support.constraint.ConstraintLayout>